@model PhotoLab.Models.Order

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі замовлення</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client_Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client_Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client_Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client_Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.ServiceName)
        </dt>
        <dd class="col-sm-10">
            @(Html.DisplayFor(model => model.Service.ServiceName)) (x@(Html.DisplayFor(model => model.Count)))
        </dd>
        @if (Model.Service.Description != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Service.Description)
            </dt>
            <dd class="col-sm-10" style="white-space: pre-line;">@Html.DisplayFor(model => model.Service.Description)</dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        @switch(Model.Status){
            case Status.Success:
                <dd class="col-sm-10 text-success text-opacity-75">@Html.DisplayFor(model => model.Status)</dd>
                break;
            case Status.Processing:
                <dd class="col-sm-10 text-secondary text-opacity-75">@Html.DisplayFor(model => model.Status)</dd>
                break;
            case Status.Cancelled:
                <dd class="col-sm-10 text-danger text-opacity-75">@Html.DisplayFor(model => model.Status)</dd>
                break;
            default:
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>
                break;
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Worker)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Worker)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderId">Правка</a> |
    <a asp-action="Index">Назад до списку</a>
</div>
